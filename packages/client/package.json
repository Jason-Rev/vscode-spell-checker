{
    "name": "code-spell-checker",
    "description": "Spelling checker for source code",
    "displayName": "Code Spell Checker",
    "author": "Jason Dent",
    "license": "MIT",
    "version": "2.0.0-alpha.1",
    "publisher": "streetsidesoftware",
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/streetsidesoftware/vscode-spell-checker"
    },
    "bugs": {
        "url": "https://github.com/streetsidesoftware/vscode-spell-checker/issues"
    },
    "homepage": "https://github.com/streetsidesoftware/vscode-spell-checker/blob/master/packages/client/README.md",
    "engines": {
        "vscode": "^1.54.0"
    },
    "main": "./dist/extension.js",
    "scripts": {
        "clean": "rimraf out",
        "clean-build": "npm run clean && npm run build",
        "build": "tsc && webpack --mode none",
        "build-production": "npm run clean && webpack --mode production",
        "build-integration-test": "npm run build && cd ../_integrationTests && npm install && npm run build",
        "lint": "eslint 'src/**'",
        "vscode:prepublish": "npm run build-production",
        "version": "npm run package-extension",
        "watch": "npm run build -- --watch",
        "test": "jest",
        "test-integration": "cross-env CODE_DISABLE_EXTENSIONS=true CODE_TESTS_PATH=./../_integrationTests/out CODE_TESTS_DATA_DIR=./temp/vscode node ../_integrationTests/integrationTestRunner",
        "test-watch": "jest --watch"
    },
    "devDependencies": {
        "@cspell/cspell-types": "^5.3.7",
        "@types/fs-extra": "^9.0.8",
        "@types/jest": "^26.0.20",
        "@types/kefir": "^3.8.5",
        "@types/node": "^14.14.35",
        "@types/source-map-support": "^0.5.3",
        "@types/vscode": "^1.54.0",
        "comment-json": "^4.1.0",
        "cross-env": "^7.0.3",
        "fs-extra": "^9.1.0",
        "jest": "^26.6.3",
        "kefir": "^3.8.8",
        "lorem-ipsum": "^2.0.3",
        "node-watch": "^0.7.1",
        "rimraf": "^3.0.2",
        "source-map-support": "^0.5.19",
        "ts-jest": "^26.5.3",
        "ts-loader": "^8.0.17",
        "typescript": "^4.2.2",
        "vscode-languageclient": "^7.0.0",
        "vscode-spell-checker-server": "^2.0.0-alpha.1",
        "code-spell-checker-settings-webview": "^2.0.0-alpha.1",
        "vscode-uri": "^3.0.2",
        "webpack": "^5.26.2",
        "webpack-cli": "^4.5.0"
    }
}
